---
import ProcessStep from './ProcessStep.tsx'
---

<section id="process" class="py-24 px-6 bg-background text-foreground">
  <div class="max-w-6xl mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-extrabold tracking-tight mb-6">
      How I Work
    </h2>
    <p class="text-muted-foreground max-w-2xl mx-auto mb-12">
      A focused process built to deliver great results fast — no fluff.
    </p>

    <div class="grid md:grid-cols-4 gap-6">
      <ProcessStep
        step="1"
        title="Discovery"
        description="We start with a quick call or email to understand your goals, brand and content needs."
      />
      <ProcessStep
        step="2"
        title="Design"
        description="I build a live homepage preview — no guessing, you see how it feels before code."
      />
      <ProcessStep
        step="3"
        title="Development"
        description="I code the full site, optimized and functional — with forms, analytics and SEO."
      />
      <ProcessStep
        step="4"
        title="Delivery"
        description="You get the finished product: fast, clean, mobile-ready and easy to maintain."
      />
    </div>
  </div>
</section>
