<section
  id="contact"
  class="relative py-24 px-6 bg-background text-white text-center isolate overflow-hidden"
>
  <!-- Radial flare background -->
  <div class="absolute inset-0 -z-10 bg-[radial-gradient(ellipse_at_center,_rgba(255,255,255,0.05),_transparent_70%)] blur-2xl pointer-events-none" />

  <div class="max-w-3xl mx-auto animate-fade-up animate-duration-700">
    <h2 class="text-4xl md:text-5xl font-extrabold tracking-tight mb-4">Let’s Talk</h2>
    <p class="text-muted-foreground mb-10">
      Want a site like the ones above? I build and launch in 1–2 weeks — fast, personal, no agency fluff.
    </p>

    <form
      name="contact"
      method="POST"
      data-netlify="true"
      data-netlify-honeypot="bot-field"
      class="flex flex-col gap-4 text-left max-w-xl mx-auto"
    >
      <input type="hidden" name="form-name" value="contact" />
      <input type="hidden" name="bot-field" />

      <div class="flex flex-col">
        <label for="name" class="text-sm mb-1 text-muted-foreground">Name</label>
        <input
          type="text"
          id="name"
          name="name"
          placeholder="Your name"
          required
          class="p-4 rounded-xl bg-white/10 backdrop-blur text-white placeholder:text-white/50 border border-white/20 focus:outline-none focus:ring-2 focus:ring-accent"
        />
      </div>

      <div class="flex flex-col">
        <label for="email" class="text-sm mb-1 text-muted-foreground">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Your email"
          required
          class="p-4 rounded-xl bg-white/10 backdrop-blur text-white placeholder:text-white/50 border border-white/20 focus:outline-none focus:ring-2 focus:ring-accent"
        />
      </div>

      <div class="flex flex-col">
        <label for="message" class="text-sm mb-1 text-muted-foreground">Message</label>
        <textarea
          id="message"
          name="message"
          placeholder="Tell me what you need..."
          required
          class="p-4 rounded-xl bg-white/10 backdrop-blur text-white placeholder:text-white/50 border border-white/20 h-36 resize-none focus:outline-none focus:ring-2 focus:ring-accent"
        ></textarea>
      </div>

      <button
        type="submit"
        class="mt-6 bg-accent text-accent-foreground px-6 py-3 rounded-full font-semibold hover:scale-105 transition-transform"
      >
        Send Message →
      </button>
    </form>
  </div>
</section>
